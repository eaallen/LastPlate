    <div class="col-md-6">
        @if (item.Product_ID % 2 == 0)
        {                                 
            <div class="text-center">
                <img id="img" class="img-rounded" src="~/Content/Images/@(item.Product_ID).png " alt="Error" style="height:100px; width:100px;"/>
