                    @Html.DisplayFor(modelItem => item.Product.Description)
                </p>

                <p>
                    End Date:  @Html.DisplayFor(modelItem => item.End_Date)
                </p>

                <p>
                    Quantity left: @Html.DisplayFor(modelItem => item.Product_Quantity)
                </p>

                <p>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Listing_ID }) |
